<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>TempConverter</display-name>
  
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>fr.tempConverter.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ConverterServlet</servlet-name>
  	<servlet-class>fr.tempConverter.servlet.ConverterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ConverterServlet</servlet-name>
  	<url-pattern>/converter</url-pattern>
  </servlet-mapping>
  	
  	
  <filter>
  	<filter-name>ClickCounterFilter</filter-name>
  	<filter-class>fr.tempConverter.filter.ClickCounterFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>ClickCounterFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>